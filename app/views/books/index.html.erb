<div class="col-md-12">
<p id="notice"><%= notice %></p>

<h1>蔵書一覧</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>名前</th>
      <th>筆者</th>
      <th>価格</th>
      <th>出版社</th>
      <th>日付</th>
      <th>ISBMコード</th>
      <th>Cover</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= number_to_currency(book.price, unit: '¥', precision: 0) %></td>
        <td><%= book.company %></td>
        <td><%= book.day.strftime('%Y/%m/%d') %></td>
        <td><%= book.isbn_code %></td>
        <td><img src = "<%= book.cover %>" class="img-responsive" alt="Responsive image"></td>
        <td><%= link_to '閲覧', book, class: "btn btn-success btn-lg" %></td>
        <td><%= link_to '編集', edit_book_path(book), class: "btn btn-info btn-lg" %></td>
        <td><%= link_to '削除', book,class: "btn btn-warning btn-sm" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Book', new_book_path, class: "btn btn-primary btn-lg" %>
</div>
